{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "builder": "NIXPACKS",
    "buildCommand": "yarn install --frozen-lockfile && yarn build && ls -la dist/",
    "watchPatterns": ["src/**"]
  },
  "deploy": {
    "startCommand": "ls -la dist/ && node dist/main.js",
    "restartPolicyType": "ON_FAILURE",
    "restartPolicyMaxRetries": 10
  }
}