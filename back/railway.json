{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "builder": "NIXPACKS",
    "buildCommand": "yarn build",
    "watchPatterns": ["src/**"]
  },
  "deploy": {
    "startCommand": "yarn migrate:prod && yarn start:prod",
    "restartPolicyType": "ON_FAILURE",
    "restartPolicyMaxRetries": 10
  }
}