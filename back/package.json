{
  "name": "back",
  "version": "1.0.0",
  "main": "dist/main.js",
  "license": "MIT",
  "engines": {
    "node": ">=18.0.0",
    "yarn": "1.x"
  },
  "scripts": {
    "prebuild": "rimraf dist",
    "build": "nest build",
    "postbuild": "echo Build completed successfully",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "start": "nest start",
    "start:dev": "nest start --watch",
    "start:debug": "nest start --debug --watch",
    "start:prod": "node dist/main.js",
    "start:prod:safe": "test -f dist/main.js && node dist/main.js || (echo 'dist/main.js not found, listing dist contents:' && ls -la dist/ && exit 1)",
    "start:railway": "echo 'Railway startup script' && ls -la dist/ && node dist/main.js",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config ./test/jest-e2e.json",
    "mikro-orm": "mikro-orm",
    "mikro-orm:create": "mikro-orm migration:create --config=./src/infrastructure/database/database.config.ts",
    "mikro-orm:generate": "yarn ts-node src/infrastructure/runners/generate_migration.runner.ts",
    "mikro-orm:migrate": "yarn mikro-orm migration:up --config=./src/infrastructure/database/database.config.ts",
    "mikro-orm:up": "mikro-orm migration:up",
    "mikro-orm:down": "mikro-orm migration:down",
    "mikro-orm:fresh": "mikro-orm migration:fresh",
    "mikro-orm:schema": "mikro-orm schema:create",
    "migrate": "ts-node -r tsconfig-paths/register src/scripts/migrate.ts",
    "migrate:prod": "node dist/scripts/migrate.js",
    "seed": "ts-node -r tsconfig-paths/register src/scripts/seed.ts",
    "seed:prod": "node dist/scripts/seed.js",
    "create-admin": "ts-node -r tsconfig-paths/register src/scripts/create-admin.ts",
    "create-admin:prod": "node dist/scripts/create-admin.js",
    "db:setup": "npm run migrate && npm run seed"
  },
  "dependencies": {
    "@mikro-orm/core": "^6.5.7",
    "@mikro-orm/migrations": "^6.5.7",
    "@mikro-orm/nestjs": "^6.1.1",
    "@mikro-orm/postgresql": "^6.5.7",
    "@mikro-orm/reflection": "^6.5.7",
    "@nestjs/cli": "^11.0.10",
    "@nestjs/common": "^11.1.6",
    "@nestjs/config": "^4.0.2",
    "@nestjs/core": "^11.1.6",
    "@nestjs/jwt": "^11.0.1",
    "@nestjs/passport": "^11.0.5",
    "@nestjs/platform-express": "^11.1.6",
    "bcrypt": "^6.0.0",
    "bcryptjs": "^3.0.2",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.2",
    "dotenv": "^17.2.3",
    "express": "^4.18.2",
    "passport": "^0.7.0",
    "passport-jwt": "^4.0.1",
    "pg": "^8.16.3",
    "reflect-metadata": "^0.2.2",
    "rimraf": "^6.1.0",
    "rxjs": "^7.8.2",
    "ts-node": "^10.9.2",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.9.3"
  },
  "devDependencies": {
    "@mikro-orm/cli": "^6.5.7",
    "@nestjs/schematics": "^11.0.7",
    "@nestjs/testing": "^11.1.6",
    "@types/bcrypt": "^6.0.0",
    "@types/node": "^24.6.0",
    "@types/pg": "^8.15.5",
    "nodemon": "^3.1.10"
  }
}
